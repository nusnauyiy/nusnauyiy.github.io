my_salmon = #ff6684
my_cyan = #72ffe7
my_lemon = #fff38e
intro-scale = 1.1

html
	box-sizing border-box

body
	margin 0
	padding 0
	overflow-x hidden
	font-size 22px
	font-family Brush Script MT, cursive
	
#main
	background-image url("footer.JPG"), url("website_header.PNG")
	background-position bottom left, top right
	background-repeat no-repeat
	background-attachment fixed
	background-size 30%, cover  
	
@keyframes zoomIntro
	0%
		opacity 0%
	20%
		transform matrix(intro-scale * 2, -0.1, 0.1, intro-scale * 2, 0, 0)
		opacity 20%
	36%
		transform scale(intro-scale - 0.1)
	68%
		transform scale(intro-scale + 0.15)
	84%
		transform scale(intro-scale - 0.1)
	100%
		transform scale(intro-scale)
		
@keyframes bounceIntroButtons
	0%
		opacity 0
	50%
		transform scale(0)
		opacity 0
	75% 
		transform scale(1.2)
		opacity 0.5
	100%
		transform scale(1)
		opacity 1
		
@keyframes fadeEffect
	from
		opacity 0
	to
		opacity 1
  	
background_image(path, position)
	background-image url(path)
	min-height  1000px
	background-attachment fixed
	background-position position
	background-repeat no-repeat
	background-size contain
	
intro_button(top, left)
	padding 20px 5px
	background-color white
	border 5px solid black
	border-radius 50%
	box-shadow inset -30px -20px my_lemon
	font-size 1.5vw
	font-weight bold
	intro_button_position top left
	animation 2s ease-out 0s 1 bounceIntroButtons
	transition 1.5s
	&:hover
		color transparent
		transform scale(20)
		border 5px solid my_cyan
		box-shadow  -1px -10px my_salmon 
	
intro_button_position(top, left)
	position fixed
	top top
	left left
	
.intro_image
	position  relative
	background_image "suzette.jpg" center
	animation 1.5s ease-out 0s 1 zoomIntro
	transform scale(intro-scale)
	z-index  -1

#intro_button
	intro_button 85% 40%
	


.section 
	width 75%
	height 80%
	position absolute
	left 3%
	animation fadeEffect 1s

#about_section
	visibility visible
	
#tech_section
	visibility hidden
	
#art_section
	visibility hidden
	width 85%
	
.title
	width 40vw
	
.content
	position absolute
	width 80%
	right 0
	
#art-content
	transform translateX(-15%)

//project card horizontal scrolling
horizontal-gallery-container(height, width, fade)
	display  flex
	flex-wrap  nowrap
	overflow-x  auto
	overflow-y  visible
	height  height
	width  width
	padding-top 3%
	background-color  transparent
	if fade
		& after
			content ""
			position absolute
			z-index 1
			bottom 0
			right 0
			pointer-events none
			background-image linear-gradient(to right, rgba(255,255,255, 1), rgba(255,255,255, 0), rgba(255,255,255, 0), rgba(255,255,255, 0), rgba(255,255,255, 1) 100%)
			background-position  right
			height  height
			width width
			padding-top 3%
		
horizontal-gallery-card(height, margin_right, color)
	flex 0 0 auto
	background-color white
	margin-right margin_right
	position  relative
	height height
	text-align center
	box-shadow inset 1vw 0.5vh color
	padding-left 1vw
	padding-top 0.5vh
	transform scale(0.8)
	&:hover
		transform scale(1.15)
		transition 0.5s

.project-card-container
	horizontal-gallery-container 55vh 100% true
		
.project-card
	horizontal-gallery-card 50vh 0 my_salmon
	width 55%
		
.project-card-container, .project-card-container-flexbox, .art-card-container, .art-card-container-flexbox
	-webkit-overflow-scrolling  touch
	&::-webkit-scrollbar
		display  none 
		
img.project-card-image
	display  block 
	margin-left  auto 
	margin-right  auto 
	margin-top  2%
	width  95% 
	min-height  65%

.project-card-title
	color  white
	text-shadow  2px 2px 1px black
	font-size  2vw
	font-weight  bold
	position absolute
	left 0
	top 60%
	width 100%
		
#fake-project-card
	width 25vh
	background-color  transparent
	box-shadow none
	
.project-card-desc
	font-size 16px
	

.art-tab-container
	float left
	width 15%
	height 30%
  
.art-tab
	display block
	color black
	background-image linear-gradient(to bottom right, white , my_lemon)
	border none
	padding 5%
	margin-bottom 2%
	width 100%
	box-shadow inset -2px -2px my_salmon
	text-align center
	cursor pointer 
	transition  0.3s
	font-family inherit
	&:hover
		box-shadow inset 1vw 0.5vh my_salmon
.art-tab + .active
	box-shadow none
	background-image none
	background-color my_salmon
	color white
	
#fake-tab
	display none

/* Style the buttons that are used to open the tab content */
.art-tab button
	display block
	background-color inherit
	color black
	padding 22px 16px
	width 100%
	border none
	outline none
	text-align left
	cursor pointer
	transition 0.3s

.art-gallery-container
	float left
	width 80%
	height 30%
	
.art-card-container
	position fixed
	visibility hidden
	top 0
	horizontal-gallery-container 55vh 85% false//(1- .art-tab-container.width)
	
.art-card
	horizontal-gallery-card 45vh 0 my_salmon

img.art-card-image
	display block
	margin-left auto
	margin-right auto
	height inherit

//floating buttons
.float
	position fixed
	width 60px
	height 60px
	right 2%
	background-color my_salmon
	color white
	border-radius 50%
	text-align center
	box-shadow 5px 5px black
	transition 0.5s
	&:hover
		box-shadow -2px -2px white
		transform scale(1.3)
		
#fake_float
	display none

.float + .active
	color my_salmon
	background-color white

.my-float
	font-size 25px
	margin-top 18px
	